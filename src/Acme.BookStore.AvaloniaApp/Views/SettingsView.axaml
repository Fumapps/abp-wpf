<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Acme.BookStore.AvaloniaApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Acme.BookStore.AvaloniaApp.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">
    
    <StackPanel Margin="20">
        <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
        <TextBlock Text="Application settings" FontSize="16" Margin="0,10"/>
        <TextBlock Text="Configure your preferences here." 
                   FontSize="14" Foreground="#B0FFFFFF" Margin="0,10"/>
    </StackPanel>
    
</UserControl>
