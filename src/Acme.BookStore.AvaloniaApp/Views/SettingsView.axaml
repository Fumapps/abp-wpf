<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Acme.BookStore.AvaloniaApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Acme.BookStore.AvaloniaApp.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">
    
    <ScrollViewer>
        <StackPanel Margin="20" Spacing="10">
            <TextBlock Text="Personalization" 
                       FontSize="20" 
                       FontWeight="Medium"
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="Theme" 
                       FontSize="14"
                       Margin="0,10,0,5"/>
            
            <RadioButton Content="Light"
                         GroupName="ThemeSelect"
                         IsChecked="{Binding IsLightTheme}"
                         Command="{Binding ChangeThemeCommand}"
                         CommandParameter="theme_light"
                         Margin="0,5,0,0"/>
            
            <RadioButton Content="Dark"
                         GroupName="ThemeSelect"
                         IsChecked="{Binding IsDarkTheme}"
                         Command="{Binding ChangeThemeCommand}"
                         CommandParameter="theme_dark"
                         Margin="0,5,0,0"/>
            
            <Separator Margin="0,20,0,20"/>
            
            <TextBlock Text="About Acme.BookStore.AvaloniaApp" 
                       FontSize="20" 
                       FontWeight="Medium"
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="{Binding AppVersion}" 
                       FontSize="14"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
            
            <TextBlock Text="Cross-platform desktop application built with Avalonia UI" 
                       FontSize="12"
                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                       Margin="0,10,0,0"/>
            
            <TextBlock Text="Powered by ABP Framework" 
                       FontSize="12"
                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                       Margin="0,5,0,0"/>
        </StackPanel>
    </ScrollViewer>
    
</UserControl>
