<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Acme.BookStore.AvaloniaApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Acme.BookStore.AvaloniaApp.Views.DashboardView"
             x:DataType="vm:DashboardViewModel">
    
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Dashboard" FontSize="24" FontWeight="Bold"/>
        
        <TextBlock Text="Welcome to Acme BookStore!" 
                   FontSize="18" 
                   Margin="0,20,0,10"/>
        
        <TextBlock Text="This is a counter demonstration:" 
                   FontSize="14" 
                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" 
                   Margin="0,10,0,0"/>
        
        <StackPanel Orientation="Horizontal" Spacing="15" Margin="0,10,0,0">
            <Button Content="Click me!" 
                    Command="{Binding CounterIncrementCommand}"
                    Padding="20,10"/>
            
            <TextBlock Text="{Binding Counter}" 
                       FontSize="20"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
        </StackPanel>
        
        <TextBlock Text="Click the button to increment the counter" 
                   FontSize="12" 
                   Foreground="{DynamicResource TextFillColorTertiaryBrush}" 
                   Margin="0,10,0,0"/>
    </StackPanel>
    
</UserControl>
